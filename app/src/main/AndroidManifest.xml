<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.androidgranada.botemap">

    <application
        android:allowBackup="true"
        android:label="@string/app_name"
        android:icon="@mipmap/ic_launcher"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.androidgranada.botemap.GUI.MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.androidgranada.botemap.GUI.SettingsActivity"
            android:label="@string/action_settings">
            <!-- Parent activity meta-data to support 4.0 and lower -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.androidgranada.botemap.GUI.MainActivity" />
        </activity>
        <activity
            android:name="com.androidgranada.botemap.GUI.LoginActivity"
            android:label="@string/title_activity_login">
            <!-- Parent activity meta-data to support 4.0 and lower -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.androidgranada.botemap.GUI.MainActivity" />
        </activity>
        <activity
            android:name="com.androidgranada.botemap.GUI.ContactsActivity"
            android:label="@string/title_activity_contacts">
            <!-- Parent activity meta-data to support 4.0 and lower -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.androidgranada.botemap.GUI.MainActivity" />
        </activity>
    </application>

</manifest>
